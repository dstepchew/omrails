<%= simple_form_for(@link, html: {class: "form-horizontal"}) do |f| %>
  <%= f.error_notification %>
  <%= f.full_error :image_file_size, class: "alert alert-error" %>
  <%= f.full_error :image_content_type, class: "alert alert-error" %>

<%= f.input :link_remote_url, label: "Product URL" %>
  <%= f.input :image, label: "Upload an image" %>
  <%= f.input :image_remote_url, label: "or enter a URL" %>
    <%= f.input :description, as: :text, input_html: { rows: "3" } %>
    <%= f.input :store_name, label: "Store Name" %>
    <%= f.input :price, label: "Starting Price" %>
    <%= f.input :current_price, label: "Current Price" %>

  <div class="form-actions">
    <%= f.button :submit, class: "btn btn-primary" %>
  </div>
<% end %>